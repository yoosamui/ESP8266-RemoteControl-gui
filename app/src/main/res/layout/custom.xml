<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">





    <Button
        android:id="@+id/dialogButtonON"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=" On "
        android:layout_marginTop="200dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/image"
        />


    <Button
        android:id="@+id/dialogButtonOFF"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=" OFF "
        android:layout_alignTop="@+id/dialogButtonON"
        android:layout_toRightOf="@+id/dialogButtonON"
        android:layout_toEndOf="@+id/dialogButtonON" />


    <Button
        android:id="@+id/dialogButtonCancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=" Cancel "
        android:layout_below="@+id/text"
        android:layout_toRightOf="@+id/dialogButtonOFF"
        android:layout_toEndOf="@+id/dialogButtonOFF" />


    <TextView
        android:id="@+id/text"
        android:layout_width="327dp"
        android:layout_height="200dp"

        android:text="hello_world"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/primary_text_dark"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>